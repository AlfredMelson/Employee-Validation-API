{
  "name": "hire-task-mygomtech-server",
  "version": "0.1.0",
  "license": "MIT",
  "author": "Alfred Melson",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alfredmelson/mygomtech_server.git"
  },
  "scripts": {
    "build-ts": "tsc",
    "build": "yarn build-ts && yarn lint-ts",
    "clean": "lerna clean --yes && rimraf node_modules yarn.lock",
    "clean-dist": "rimraf dist",
    "debug": "yarn build && yarn watch-debug",
    "dev": "tsnd --respawn src/server.ts",
    "format": "prettier --write \"src/**/*.{ts,json}\"",
    "lint-es": "eslint -f unix \"src/**/*.ts\"",
    "lint-ts": "tsc --noEmit && eslint \"**/*.ts\" --quiet --fix",
    "serve-debug": "tsnd --debug dist/server.js",
    "start": "node dist/src/server.js",
    "typeCheck": "tsc --pretty",
    "test": "jest --forceExit --coverage --verbose",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yarn watch-ts\" \"yarn serve-debug\"",
    "watch-ts": "tsc -w"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "body-parser": "1.19.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "date-fns": "^2.28.0",
    "dotenv": "^16.0.0",
    "express": "^4.17.2",
    "express-validator": "^6.14.0",
    "jsonwebtoken": "^8.5.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/body-parser": "1.19.2",
    "@types/concurrently": "^7.0.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.12",
    "@types/eslint": "^8.4.1",
    "@types/eslint-config-prettier": "^6.11.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.0",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^17.0.17",
    "@types/prettier": "^2.4.4",
    "@types/rimraf": "^3.0.2",
    "@types/supertest": "2.0.11",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "concurrently": "^7.0.0",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.3.0",
    "jest": "^27.5.1",
    "lerna": "^4.0.0",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "supertest": "6.2.2",
    "ts-node": "^10.5.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.5.5"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
